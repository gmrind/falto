<div class="row">
  <div class="col-md-6">
    <h2><%= @user.username %></h2>
    <table class="table">
      <tr>
        <td><strong>Role:</strong></td>
        <td><%= @user.role.titleize %></td>
      </tr>
      <tr>
        <td><strong>Email:</strong></td>
        <td><%= @user.email %></td>
      </tr>
      <% @user.sessionenrolls.each do |enroll| %>
      <tr>
        <td><strong>Session:</strong></td>
        <td><%= enroll.coursesession.name %></td>
      </tr>
      <% end %>

      <tr>
      </tr>
    </table>
  </div>
  <div class="col-md-12">
    <% @user.takes.each do |take| %>
      <br><span class="updown-line">
      <strong>Course:</strong>
      <%= take.course.title %>
      </span><br>
    <% take.course.coursesemesters.each do |coursesemester| %><br>
      <strong><%= coursesemester.name %></strong><br>
    <% coursesemester.semestersubjects.each do |subject| %>
      <%= link_to subject.name, course_coursesemester_semestersubject_path(coursesemester, coursesemester, subject) %> |
    <% end -%>
    <% end -%>
    <% end %>
  </div>
</div>